{
    "name": "boojbooks",
    "description": "Nothing more do the people of Earth desire;  having now a most borderline mediocre web based book catalog solution.  You are welcome.",
    "keywords": ["boojbooks", "framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "google/apiclient": "^2.1",
        "laravel/framework": "5.3.*",
        "heroku/heroku-buildpack-php": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0",
        "heroku/heroku-buildpack-php": "*"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [         
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "php -r \"file_exists('storage/') || mkdir('storage');\"",
            "php -r \"file_exists('storage/app/') || mkdir('storage/app');\"",
            "php -r \"file_exists('storage/app/public/') || mkdir('storage/app/public');\"",
            "php -r \"file_exists('storage/framework/') || mkdir('storage/framework');\"",
            "php -r \"file_exists('storage/framework/cache/') || mkdir('storage/framework/cache');\"",
            "php -r \"file_exists('storage/framework/sessions/') || mkdir('storage/framework/sessions');\"",
            "php -r \"file_exists('storage/framework/views/') || mkdir('storage/framework/views');\"",
            "php -r \"file_exists('storage/logs/') || mkdir('storage/logs');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize",
            "php artisan migrate"            
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize",
            "php artisan migrate",
            "php -r \"file_exists('storage/') || mkdir('storage');\"",
            "php -r \"file_exists('storage/app/') || mkdir('storage/app');\"",
            "php -r \"file_exists('storage/app/public/') || mkdir('storage/app/public');\"",
            "php -r \"file_exists('storage/framework/') || mkdir('storage/framework');\"",
            "php -r \"file_exists('storage/framework/cache/') || mkdir('storage/framework/cache');\"",
            "php -r \"file_exists('storage/framework/sessions/') || mkdir('storage/framework/sessions');\"",
            "php -r \"file_exists('storage/framework/views/') || mkdir('storage/framework/views');\"",
            "php -r \"file_exists('storage/logs/') || mkdir('storage/logs');\""            
	   
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}

